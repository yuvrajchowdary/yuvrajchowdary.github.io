<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<div style="float: right; padding:10px;"><a href="/create" ><button class="btn btn-sm btn-success">CREATE</button></a></div>
<div class="container" style="width: 50%">
   <h4 style="text-align: center;">ALL DATA</h4>
   <table class="table">
      <thead>
         <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Update</th>
            <th scope="col">Delete</th>
         </tr>
      </thead>
      <tbody>
         <%list.forEach(list => {%>
         <tr>
            <form action="/update" method="POST">
               <td><%=list.name%></td>
               <td><%=list.email%></td>
               <td><input type="submit" name="" value="Update" class="btn btn-sm btn-info" ></td>
               <input type="hidden" name="id" value="<%=list.id%>">
               <input type="hidden" name="name" value="<%=list.name%>">
               <input type="hidden" name="email" value="<%=list.email%>">
            </form>
            <td>
               <form action="<%=list.id%>/delete" method="POST"><input type="submit" name="" value="delete" class="btn btn-sm btn-danger"></form>
            </td>
         </tr>
         <%})%>
      </tbody>
   </table>
</div>